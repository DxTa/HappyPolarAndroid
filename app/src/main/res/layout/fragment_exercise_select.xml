<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bhorkar.heartratesensor.ExerciseSelectFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/spinnerExercises"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="false"
            android:spinnerMode="dialog"
            android:gravity="center"
            android:entries="@array/exercise_types"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Calorie Target"
            android:id="@+id/tvCalorieTarget"
            android:layout_below="@+id/spinnerExercises"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go"
            android:id="@+id/btnGo"
            android:layout_below="@+id/numCalorieTarget"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            android:onClick="onBtnClick"/>

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numCalorieTarget"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" />
    </RelativeLayout>
</FrameLayout>
